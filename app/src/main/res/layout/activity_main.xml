<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#453F57">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Bar with Boostify Title -->
        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#A773FF"
            android:gravity="center">

            <!-- Centered App Title (Boostify) -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boostify"
                android:textColor="#FFA500"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME, DREAMY_BOY"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Recent Games Label -->
        <TextView
            android:id="@+id/recent_games_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECENT GAMES"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/welcome_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Recent Games Container -->
        <LinearLayout
            android:id="@+id/recent_games_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3B2A58"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/recent_games_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Popular Games Label -->
        <TextView
            android:id="@+id/popular_games_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POPULAR GAMES"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/recent_games_container"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Popular Games Input -->
        <EditText
            android:id="@+id/game_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GAME NAME"
            android:background="#FFFFFF"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/popular_games_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Discover Games Label -->
        <TextView
            android:id="@+id/discover_games_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISCOVER GAMES"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/game_name_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Discover Games Container -->
        <LinearLayout
            android:id="@+id/discover_games_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3B2A58"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/discover_games_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
