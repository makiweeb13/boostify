<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer orange border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF6600" /> <!-- Boostify orange -->
        </shape>
    </item>

    <!-- Inner white circle (acts as padding) -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White inner circle -->
        </shape>
    </item>
</layer-list>
